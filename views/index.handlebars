<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="beer-text">Example Text</label>
            <input type="text" id="beer-text" class="form-control" aria-describedby="beer-text"
              placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="beer-description">Example Description</label>
            <textarea class="form-control" id="beer-description" aria-describedby="beer-description"
              placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Beer:</h3>
        <ul id="beer-list" class="list-group">
          {{#each beers}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="beer/{{this.id}}">{{this.style}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}

          {{#each questions}}
          <p>{{this.question}}</p>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>